{
    "$schema": "./schemas/mobile-schema.json",
    "identifier": "mobile-capability",
    "windows": [
        "main"
    ],
    "platforms": [
        "iOS",
        "android"
    ],
    "permissions": [
        "store:allow-set",
        "store:allow-save",
        "store:allow-get",
        "store:allow-delete",
        "http:allow-fetch",
        "http:default",
        "dialog:allow-save",
        "dialog:allow-open",
        "dialog:default",
        "fs:default",
        "fs:allow-appdata-write",
        "fs:allow-download-write"
    ]
}